{
  "ServiceName": "sample-service-name",
  "RabbitMq": {
    "Connections": {
      "DefaultConnection": {
        "UseAsyncConsumer": false,
        "VirtualHosts": {
          "/": {
            "UserName": "guest",
            "Password": "guest",
            "Queues": {
              "Q1Subscriber": {
                "QueueName": "q1",
                // "UseModelTypeAsSuffix": true,
                "UseDeadLetter": true,
                "ScalingSettings": {
                  "ChannelsCount": 1, // общее кол-во каналов этой очереди. // default 1
                  "ConsumersPerChannel": 2, // 2 подписчика на 1 канал -> default 1
                  "MessagesPerConsumer": 1, // не более 1 на подписчика -> default 1
                  "MessagesPerChannel": 1 // не более 10 на канале -> default 1
                },
                "RetrySettings": {
                  "RetryPolicy": "Linear",
                  "RetryDelayInSeconds": 4,
                  "RetryCount": 3 
                },
                "Bindings": [
                  {
                    "FromExchange": "test-exchange",
                    "ExchangeType": "direct",
                    "RoutingKeys": [
                      "rk1",
                      "rk2"
                    ]
                  }
                ]
              }
            }
          },
          "TESTHOST": {
            "UserName": "guest1",
            "Password": "guest1",
            "Queues": {
              "Q2Subscriber": {
                "QueueName": "q2",
                // "UseModelTypeAsSuffix": true,
                "Bindings": [
                  {
                    "FromExchange": "test-exchange",
                    "ExchangeType": "direct",
                    "RoutingKeys": [
                      "rk1",
                      "rk2"
                    ]
                  }
                ]
              }
            }
          }
        }
      },
      "SecondConnection": {
        "VirtualHosts": {
          "ThirdVirtualHost": {
            "UserName": "thirdUser",
            "Password": "thirdUser",
            "Queues": {
              "Q3Subscriber": {
                "QueueName": "q3",
                // "UseModelTypeAsSuffix": true,
                "ScalingSettings": {
                  "ChannelsCount": 1, // общее кол-во подписчиков этой очереди. // default 1
                  "ConsumersPerChannel": 2, // 2 подписчика на 1 канал -> default 1
                  "MessagesPerConsumer": 1, // не более 1 на подписчика -> default 1
                  "MessagesPerChannel": 1 // не более 1 на канале -> default 1
                },
                "Bindings": [
                  {
                    "FromExchange": "test-exchange",
                    "ExchangeType": "fanout",
                    "RoutingKeys": [
                      "rk1",
                      "rk2"
                    ]
                  }
                ]
              }
            }
          }
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*"
}